{
  "name": "Loading Screenz",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Popular game loading screens.",
  "homepage_url": "https://budimir.dev",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Loading Screenz",
    "default_popup": "popup.html"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "permissions": ["https://*/*", "file:///*"],
  "content_security_policy": "default-src 'self';",
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["js/content.js"]
    }
  ]
}
